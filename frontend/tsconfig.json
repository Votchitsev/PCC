{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "strictNullChecks": true,
    "checkJs": true,
    "module": "ES2022",
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  }, 
  "include": [
    "./src/**/*",
  ]
}
