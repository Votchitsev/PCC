{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "strictNullChecks": true,
    "checkJs": true,
    "module": "ES2022",
    "rootDir": "./src",
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@styles/*": ["./styles/*"],
      "@main/*": ["./modules/main/*"],
      "@auth/*": ["./modules/auth/*"],
      "@checkList/*": ["./modules/checkList/*"],
      "@departments/*": ["./modules/departments/*"],
      "@lib/*": ["./lib/*"],
      "@api/*": ["./api/*"],
      "@assets/*": ["./assets/*"],
      "@inspections/*": ["./modules/inspections/*"],
      "@navigation/*": ["./modules/navigation/*"],
      "@analytics/*": ["./modules/analytics/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  }, 
  "include": [
    "./src/**/*",
    "./src/assets.d.ts"
  ]
}
